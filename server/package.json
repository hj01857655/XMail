{
  "name": "email-manager-server",
  "version": "1.0.0",
  "description": "Email manager server API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node server.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:init": "ts-node src/scripts/init-database.ts",
    "db:seed": "ts-node src/scripts/seed-data.ts",
    "db:migrate": "ts-node -e \"import('./database/migrations').then(m => new m.default().migrate())\"",
    "db:rollback": "ts-node -e \"import('./database/migrations').then(m => new m.default().rollback(0))\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-imap": "^0.9.6",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mailparser": "3.4.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/node-imap": "0.9.3",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}